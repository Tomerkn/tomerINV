# Simple Dockerfile for testing Railway deployment
FROM python:3.11-slim

WORKDIR /app

# Install only Flask
RUN pip install flask

# Copy the simple test app
COPY simple_test_app.py app.py

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PORT=4000

# Expose port
EXPOSE 4000

# Run the simple app
CMD python app.py 